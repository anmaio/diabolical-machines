{
  "name": "onion",
  "version": "1.0.0",
  "description": "Onion smart contract to test HTML and IPFS",
  "repository": "https://anmaio@dev.azure.com/anmaio/FakeReality/fr-html-ipfs",
  "author": "Danny Pilbeam <olied@anma.io>",
  "license": "UNLICENSED",
  "scripts": {
    "hook:add": "yarn add husky --dev && yarn husky install && yarn husky add .husky/pre-commit \"yarn format:sol\" && git add .husky/pre-commit",
    "hook:remove": "yarn remove husky && git config --unset core.hooksPath",
    "node:local": "./node_modules/.bin/hardhat --config hardhat.config.local.js node",
    "node:docker": "docker compose rm -f node && docker compose up node --build",
    "accounts:local": "./node_modules/.bin/hardhat --config hardhat.config.local.js accounts",
    "clean:local": "./node_modules/.bin/hardhat --config hardhat.config.local.js clean",
    "lint:sol": "./node_modules/.bin/solhint -f table contracts/**/*.sol",
    "format:sol": "./node_modules/.bin/prettier --write contracts/**/*.sol",
    "check:local": " yarn format:sol && yarn lint:sol",
    "test:local": "yarn format:sol && yarn lint:sol && ./node_modules/.bin/hardhat --config hardhat.config.local.js test",
    "compile:local": "./node_modules/.bin/hardhat --config hardhat.config.local.js compile",
    "deploy:local": "./node_modules/.bin/hardhat --config hardhat.config.local.js --network localhost deploy-local",
    "deploy:rinkeby": "./node_modules/.bin/hardhat --config hardhat.config.js --network rinkeby deploy --verify true",
    "deploy:mainnet": "./node_modules/.bin/hardhat --config hardhat.config.js --network mainnet deploy --verify true",
    "verify:rinkeby": "./node_modules/.bin/hardhat --config hardhat.config.js --network rinkeby verify",
    "client:local": "node ./client/sample-client.js",
    "client:docker": "docker compose up client --build"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-solhint": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "chai": "^4.2.0",
    "dotenv": "^16.0.1",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.9.9",
    "hardhat-ethernal": "^1.0.0",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-prettier": "^0.0.1",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.7.2",
    "base64-sol": "^1.1.0"
  }
}
